<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sam">

    <application
        android:allowBackup="true"
        android:icon="@drawable/default_doc_64x64"
        android:supportsRtl="true"
        android:label="OptNote"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </activity>
        <activity
            android:name=".ChapterNameEnterActivity"
            android:screenOrientation="landscape"
            android:label="Создание раздела"
            android:theme="@style/AppTheme" />
        <activity android:name=".EditPageActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".PageNameEnterActivity"
            android:screenOrientation="landscape"/>
    </application>

</manifest>